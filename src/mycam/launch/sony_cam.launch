<launch>
    <!-- Node to run my_cam.py -->

    <arg name="cam" default="sony_1" />
    
    <node   name="$(arg cam)"
            pkg="mycam"
            type="sony_cam.py"
            output="log">
        <param name="camera_manager" value="$(arg cam)"/>
        <param name="device_id" value="2"/>
        <param name="calibration_file" value="$(find mycam)/config/camera_info_$(arg cam).yaml"/>
    </node>
<!-- 
    <node   name="$(arg cam)_detect"
            pkg="my_aruco"
            type="sony_detect.py"
            output="screen">
    </node> -->
</launch>

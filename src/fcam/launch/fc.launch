<launch>
    <arg name="camera_name" default="camera" />
    <arg name="device_id" default="0" />
    <arg name="calib_file" default="" />
    
        <node   name="$(arg camera_name)"
                pkg="fcam"
                type="fast_camera_node.py"
                output="screen">
            <param name="device_id" value="$(arg device_id)" />
            <param name="camera_manager" value="$(arg camera_name)" />
            <param name="calibration_file" value="$(find fcam)/config/camera_info_$(arg calib_file).yaml"/>
    </node>
</launch>

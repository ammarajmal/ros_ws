<launch>
    <!-- Define namespace and machine for the node -->
    <arg name="nuc_name" default="nuc1" />
    <arg name="nuc_address" default="" />
    <arg name="nuc_user" default="" />
    <arg name="nuc_password" default="" />
    <arg name="env_loader_path" default="/opt/ros/noetic/env_remote.sh" />

    <!-- Other node-specific arguments -->
    <arg name="image" default="image" />
    <arg name="transport" default="raw" />
    <arg name="fiducial_len" default="0.035" />
    <arg name="dictionary" default="0" />
    <arg name="do_pose_estimation" default="true" />
    <arg name="vis_msgs" default="false" />
    <arg name="ignore_fiducials" default="" />
    <arg name="fiducial_len_override" default="" />
    <arg name="verbose" default="false" />

    <!-- Set the namespace using the 'arg' -->
    <group ns="$(arg nuc_name)">

        <!-- Machine configuration -->
        <machine
            name="$(arg nuc_name)"
            address="$(arg nuc_address)"
            env-loader="$(arg env_loader_path)"
            user="$(arg nuc_user)"
            password="$(arg nuc_password)"
        />

        <!-- Run the aruco_detect node -->
        <node
            pkg="aruco_detect"
            name="aruco_detect"
            type="aruco_detect"
            output="screen"
            respawn="false">

            <!-- Node parameters -->
            <param name="image_transport" value="$(arg transport)" />
            <param name="publish_images" value="true" />
            <param name="fiducial_len" value="$(arg fiducial_len)" />
            <param name="dictionary" value="$(arg dictionary)" />
            <param name="do_pose_estimation" value="$(arg do_pose_estimation)" />
            <param name="vis_msgs" value="$(arg vis_msgs)" />
            <param name="ignore_fiducials" value="$(arg ignore_fiducials)" />
            <param name="fiducial_len_override" value="$(arg fiducial_len_override)" />
            <param name="verbose" value="$(arg verbose)" />

            <!-- Remappings -->
            <remap from="camera" to="$(arg image)_$(arg transport)" />
            <remap from="camera_info" to="camera_info" />
            <remap from="fiducial_transforms" to="fiducial_transforms" />
            <remap from="fiducial_vertices" to="fiducial_vertices" />
            <remap from="ignore_fiducials" to="ignore_fiducials" />
            <remap from="tf" to="tf" />
            <remap from="parameter_descriptions" to="parameter_descriptions" />
            <remap from="parameter_updates" to="parameter_updates" />
            <remap from="fiducial_images" to="fiducial_images" />
            <remap from="fiducial_images/compressed" to="fiducial_images/compressed" />
            <remap from="fiducial_images/compressed/parameter_descriptions" to="fiducial_images/compressed/parameter_descriptions" />
            <remap from="fiducial_images/compressed/parameter_updates" to="fiducial_images/compressed/parameter_updates" />
            <remap from="fiducial_images/compressedDepth" to="fiducial_images/compressedDepth" />
            <remap from="fiducial_images/compressedDepth/parameter_descriptions" to="fiducial_images/compressedDepth/parameter_descriptions" />
            <remap from="fiducial_images/theora" to="fiducial_images/theora" />
            <remap from="fiducial_images/theora/parameter_descriptions" to="fiducial_images/theora/parameter_descriptions" />
            <remap from="fiducial_images/theora/parameter_updates" to="fiducial_images/theora/parameter_updates" />
        </node>
    </group>
</launch>
